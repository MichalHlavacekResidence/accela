@model accela.Models.News
<div class="mx-auto">
    <h1 class="text-center"> Add new product </h1>
</div>

<form class="needs-validation" method="post" asp-action="AddNew" asp-controller="Admin" novalidate>
    <input asp-for="@Model.ID" type="text" class="form-control hide" aria-describedby="nameHelp" required>
    <div class="mb-3">
        <label asp-for="@Model.Title" class="form-label">Name of new</label>
        <input asp-for="@Model.Title" type="text" class="form-control" aria-describedby="nameHelp" required>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            This field is mandatory, fill it please.
        </div>
        <div id="nameHelp" class="form-text form-helper">Name of new has to be unique. <span class="form-mandatory"> This field is mandatory. </span> </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Published" class="form-label">date</label>
        <input type="datetime" runat="server" value="@Model.Published" />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Manager.ID" class="form-label"> Manager (shown as contact person) </label>
        <select asp-for="@Model.Manager.ID" class="form-select">
            @{
                <option selected value="0"> Without any specific manager</option>
foreach(Manager mngrs in ViewBag.ManagerList){
                <option value="@mngrs.ID"> @mngrs.Firstname @mngrs.Lastname </option>
}
            }
        </select>
        <div id="linkHelp" class="form-text form-helper"> If you won't select manager (contact person), manager that is set as contact person of the brand will be shown instead. </div>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Producer.ID" class="form-label"> Brand </label>
        <select asp-for="@Model.Producer.ID" class="form-select">
            @{
                <option selected value="0"> Without any specific manager</option>
foreach(Brand bran in ViewBag.BrandList){
                <option value="@bran.ID"> @bran.Name</option>
}
            }
        </select>
        <div id="linkHelp" class="form-text form-helper"> If you won't select manager (contact person), manager that is set as contact person of the brand will be shown instead. </div>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Content" for="">Content</label>
        <textarea asp-for="@Model.Content" class="form-control" placeholder="Write the content of new here." style="height: 100px"></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div id="descHelp" class="form-text form-helper">Content of new.</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ContentSmall" for="">ContentSmall</label>
        <textarea asp-for="@Model.ContentSmall" class="form-control" placeholder="Write the small content here." style="height: 100px"></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div id="descHelp" class="form-text form-helper">small content of new</div>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Subtitle" for="">Subtitle</label>
        <textarea asp-for="@Model.Subtitle" class="form-control" placeholder="Write the subtitle of new here." style="height: 100px"></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
        <div id="descHelp" class="form-text form-helper">Subtitle of new.</div>
    </div>


    <div class="mb-3">
        <label class="form-label" for="ImageFileBig"> Upload big picture </label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="ImageFile"> Upload small picture </label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
