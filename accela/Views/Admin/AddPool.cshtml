@model accela.Models.Category;
<div class="row">
    <div class="mx-auto">
        <form method="POST" asp-action="AddPool" asp-controller="Admin" class="needs-validation" novalidate>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label"> Name of the new pool </label>
                <input type="text" class="form-control" asp-for="@Model.Name" required/>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    This field is mandatory, fill it please.
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description">Description of the category</label>
                <textarea asp-for="@Model.Description" class="form-control" placeholder="Write the description of product here." style="height: 100px"></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Contact.ID" class="form-label"> Choose Manager as Contact person. </label>
                <select asp-for="@Model.Contact.ID" class="form-control">
                    <option value="null" selected disabled> Choose manager from dropdown </option>
                    @{
                        foreach(Manager mng in ViewBag.ManagerList)
                        {
                            <option value="@mng.ID"> @mng.Firstname @mng.Lastname </option> 
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="@Model.Visibility">
                    <label class="form-check-label" asp-for="@Model.Visibility"> Should be Pool visible? <span class="form-mandatory"> This field is mandatory. </span> </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" action="createpool" type="submit"> Add Pool </button>
            </div>
        </form>
    </div>
</div>
