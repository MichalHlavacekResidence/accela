@model accela.Models.User;
<div class="row">
    <div class="col"></div>
    <div class="col">
        @{
            if(@Model.Message != null){
                <div role="alert" class="alert alert-danger">
                    <p> Zadali jste špatné heslo nebo email. </p>
                </div>
            }
        }
        <form method="POST" asp-action="Login" asp-controller="Account">
            <label asp-for="@Model.Email"> Emailová adresa </label>
            <input type="email" placeholder="Zadjte prosím email" asp-for="@Model.Email"/>
            <label asp-for="@Model.Password"> Heslo </label>
            <input type="password" asp-for="@Model.Password" placeholder="*****"/>
            <button class="btn bg-success" value="Přihlásit se" name="login"> Přihlásit se </button>
        </form>
    </div>
    <div class="col"></div>
</div>
